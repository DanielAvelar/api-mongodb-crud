extends ./layout

block content
        a(href='/pages/getProducts') Return
        h1.
            #{title}
        form(method='post' enctype='application/x-www-form-urlencoded' action='/pages/insertProducts')
            p 
            label(for='idProduct') idProduct:&nbsp;&nbsp;&nbsp;
            input#idProduct(type='number' required=true name='idProduct' style="width: 50px;")
            br
            p
            label(for='name') Name:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            input#name(type='text' required=true name='name' style="width: 300px;")
            br
            p
            label(for='description') Description:&nbsp;
            input#description(type='text' required=true name='description' style="width: 800px;")
            br
            p
            label(for='amount') Amount:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            input#amount(type='number' required=true name='amount' style="width: 50px;")
            br
            p
            label(for='category') Category:&nbsp;&nbsp;&nbsp;
            input#category(type='text' required=true name='category' style="width: 100px;")
            br
            p
            label(for='price') Price:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            input#price(type='number' required=true name='price' style="width: 100px;")
            br
            p
            label(for='urlImage') Url Image:&nbsp;&nbsp;
            input#urlImage(type='text' name='urlImage' style="width: 800px;")
            br
            p
            button(type='submit') Insert