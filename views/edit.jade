extends ./layout

block content
    a(href='/api/getBooks') Return
    h1.
      Book ID #{book.isbn}
    form(action='/api/updateBook/#{book.isbn}',method='post',name='updateBook',enctype='application/x-www-form-urlencoded')
        p Name:&nbsp;
            input#inputName(type='text', value='#{book.name}', name='name', style='width:500px;')
        p Author:&nbsp;
            input#inputAuthor(type='text', value='#{book.author}', name='author', style='width:500px;')
        p Pages:&nbsp;
            input#inputPages(type='number', value='#{book.pages}', name='pages', style='width:100px;')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
              Update