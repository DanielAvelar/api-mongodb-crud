extends ./layout

block content
    a(href='/api/getProducts') Return
    h1.
      Product ID #{product.idProduct}
    form(action='/api/updateProduct/#{product.idProduct}',method='post',name='updateProduct',enctype='application/x-www-form-urlencoded')
        p Name:&nbsp;
            input#inputName(type='text', value='#{product.name}', name='name', style='width:500px;')
        p Author:&nbsp;
            input#inputDescription(type='text', value='#{product.description}', name='description', style='width:500px;')
        p Amount:&nbsp;
            input#inputPages(type='number', value='#{product.amount}', name='amount', style='width:100px;')
        p Category:&nbsp;
            input#inputPages(type='number', value='#{product.category}', name='category', style='width:100px;')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
              Update