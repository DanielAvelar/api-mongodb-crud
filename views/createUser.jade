extends ./layout

block content
    a(href='/api/getBooks') Return
    h1.
        #{title}
    form(action='/api/setup',method='post',name='createUser',enctype='application/x-www-form-urlencoded')
        p Name:&nbsp;
            input#inputName(type="text", placeholder="ex. john.smith", name="name", style='width:200px;')
        p Password:&nbsp;
            input#inputPassword(type='password',name='password', style='width:200px;')
        p Are You Administrator?:&nbsp;
            input#inputIsAdmin(type="checkbox", name="admin")
        p
            button#btnSubmit(type="submit") Create